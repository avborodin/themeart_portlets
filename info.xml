<?xml version='1.0' encoding="utf-8"?>
<jtlshopplugin>
	<Name>Themy Toolbox</Name>
	<Description>Toolbox für deinen JTL-Shop</Description>
	<Author>Themeart</Author>
	<URL>https://www.themeart.de</URL>
	<XMLVersion>100</XMLVersion>
	<ShopVersion>5.1.1</ShopVersion>
	<Icon>preview.png</Icon>
	<PluginID>themeart_portlets</PluginID>
	<Version>1.20.2</Version>
	<CreateDate>2021-03-30</CreateDate>
	<Install>
		<Adminmenu>
			<Customlink sort="1">
				<Name>Instagram</Name>
			</Customlink>
			<Settingslink sort="2">
				<Name>Einstellungen</Name>
				<Setting type="selectbox" initialValue="Y" sort="1" conf="Y">
					<Name>Suche aktivieren</Name>
					<Description/>
					<ValueName>isLightsearch</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Ja</Option>
						<Option value="N" sort="2">Nein</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="selectbox" initialValue="Y" sort="2" conf="Y">
					<Name>Produktbild anzeigen</Name>
					<Description/>
					<ValueName>showProductImage</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Ja</Option>
						<Option value="N" sort="2">Nein</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="selectbox" initialValue="Y" sort="3" conf="Y">
					<Name>Produktpreis anzeigen</Name>
					<Description/>
					<ValueName>showProductPrice</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Ja</Option>
						<Option value="N" sort="2">Nein</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue="" sort="4" conf="N">
					<Name>Whatsapp</Name>
					<Description />
					<ValueName>button_settings</ValueName>
				</Setting>
				<Setting type="selectbox" initialValue="N" sort="5" conf="Y">
					<Name>Show whatsapp button</Name>
					<Description/>
					<ValueName>isWhatsappButton</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Aktiviert</Option>
						<Option value="N" sort="2">Deaktiviert</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue="" sort="6" conf="Y">
					<Name>Whatsapp number</Name>
					<Description></Description>
					<ValueName>whatsappNumber</ValueName>
				</Setting>
				<Setting type="text" initialValue="" sort="7" conf="N">
					<Name>Lagerbestand visualisieren</Name>
					<Description />
					<ValueName>product_settings</ValueName>
				</Setting>
				<Setting type="selectbox" initialValue="N" sort="8" conf="Y">
					<Name>Funktion aktivieren?</Name>
					<Description>Die Wawi-Einstellung Lagerbestand beachten muss beim Artikel aktiv sein.</Description>
					<ValueName>isProductStock</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Ja</Option>
						<Option value="N" sort="2">Nein</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue=".stock-information" sort="9" conf="Y">
					<Name>Selector für Anzeige</Name>
					<Description></Description>
					<ValueName>selectorProductStock</ValueName>
				</Setting>
				<Setting type="text" initialValue="" sort="10" conf="N">
					<Name>Infinite scroll</Name>
					<Description />
					<ValueName>infinite_scroll_settings</ValueName>
				</Setting>
				<Setting type="selectbox" initialValue="3" sort="11" conf="Y">
					<Name>Load on page</Name>
					<Description/>
					<ValueName>loadInfiniteScroll</ValueName>
					<SelectboxOptions>
						<Option value="1" sort="3">Scroll</Option>
						<Option value="2" sort="1">Button</Option>
						<Option value="3" sort="2">Click</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue="" sort="12" conf="N">
					<Name>Payment icons</Name>
					<Description />
					<ValueName>payment_icons_settings</ValueName>
				</Setting>
				<Setting type="selectbox" initialValue="N" sort="13" conf="Y">
					<Name>Show payment icons</Name>
					<Description/>
					<ValueName>isPaymentIcons</ValueName>
					<SelectboxOptions>
						<Option value="Y" sort="1">Aktiviert</Option>
						<Option value="N" sort="2">Deaktiviert</Option>
					</SelectboxOptions>
				</Setting>
				<Setting type="text" initialValue="" sort="14" conf="Y">
					<Name>Selector payment icons</Name>
					<Description></Description>
					<ValueName>selectorPaymentIcons</ValueName>
				</Setting>
			</Settingslink>
		</Adminmenu>
		<AdminWidget>
			<Widget>
				<Title>Themeart - News und Insights</Title>
				<Class>ThemeartNewsWidget</Class>
				<Container>center</Container>
				<Description>Bleibe stets informiert über aktuelle Entwicklungen, spannende Kundenprojekte und interessante Ecommerce Themen.</Description>
				<Pos>1</Pos>
				<Expanded>1</Expanded>
				<Active>1</Active>
			</Widget>
		</AdminWidget>
		<Portlets>
			<Portlet>
				<Title>Slider</Title>
				<Class>taSlider</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>BrandSlider</Title>
				<Class>taBrandSlider</Class>
				<Group>themeart</Group>
