				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Product</Title>
				<Class>taProduct</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>ProductFeed</Title>
				<Class>taProductFeed</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Google Map</Title>
				<Class>taGooglemap</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>FlexContainer</Title>
				<Class>taFlexContainer</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Heading</Title>
				<Class>taHeading</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>FAQ</Title>
				<Class>taFaq</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Icon</Title>
				<Class>taIcon</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Image</Title>
				<Class>taImage</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Gallery</Title>
				<Class>taGallery</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Config</Title>
				<Class>taConfig</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Usp</Title>
				<Class>taUsp</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>News</Title>
				<Class>taNews</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>Reviews</Title>
				<Class>taReviews</Class>
