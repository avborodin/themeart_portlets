			</Portlet>
			<Portlet>
				<Title>InstagramFeed</Title>
				<Class>taInstagramFeed</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>PinterestFeed</Title>
				<Class>taPinterestFeed</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
			<Portlet>
				<Title>EasySlider</Title>
				<Class>taEasySlider</Class>
				<Group>themeart</Group>
				<Active>1</Active>
			</Portlet>
		</Portlets>
		<Blueprints>
			<Blueprint>
				<Name>Cards</Name>
				<JSONFile>cards.json</JSONFile>
			</Blueprint>
			<Blueprint>
				<Name>Cards v2</Name>
				<JSONFile>cards_v2.json</JSONFile>
			</Blueprint>
			<Blueprint>
				<Name>FAQ</Name>
				<JSONFile>faq.json</JSONFile>
			</Blueprint>
			<Blueprint>
				<Name>Überschrift mit Linie</Name>
				<JSONFile>ueberschrift_mit_linie.json</JSONFile>
			</Blueprint>
			<Blueprint>
				<Name>Feed Neu im Sortiment</Name>
				<JSONFile>feed_neu_im_sortiment.json</JSONFile>
